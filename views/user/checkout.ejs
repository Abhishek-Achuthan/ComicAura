<!-- Coupons Modal -->
<div class="modal fade" id="couponsModal" tabindex="-1" aria-labelledby="couponsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header border-secondary">
                <h5 class="modal-title" id="couponsModalLabel">Available Coupons</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <% if (availableCoupons && availableCoupons.length > 0) { %>
                    <div class="coupon-list">
                        <% availableCoupons.forEach(coupon => { %>
                            <div class="coupon-card mb-3 p-3 border border-secondary rounded">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="text-info mb-2"><%= coupon.code %></h5>
                                        <p class="mb-2"><%= coupon.description %></p>
                                        <div class="discount-details">
                                            <span class="badge bg-info mb-2">
                                                <% if (coupon.discountType === 'percentage') { %>
                                                    <%= coupon.discountAmount %>% OFF
                                                    <% if (coupon.maxDiscountAmount) { %>
                                                        (Max ₹<%= coupon.maxDiscountAmount %>)
                                                    <% } %>
                                                <% } else { %>
                                                    ₹<%= coupon.discountAmount %> OFF
                                                <% } %>
                                            </span>
                                        </div>
                                        <% if (coupon.minimumPurchase) { %>
                                            <small class="text-muted d-block">
                                                Min. Purchase: ₹<%= coupon.minimumPurchase %>
                                            </small>
                                        <% } %>
                                    </div>
                                    <button class="btn btn-outline-info btn-sm" 
                                            onclick="applyCoupon('<%= coupon.code %>')"
                                            data-bs-dismiss="modal">
                                        Apply
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-ticket-alt fa-3x mb-3 text-muted"></i>
                        <p class="text-muted">No coupons available at the moment</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/user/checkout.js" defer></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize all modals
    const modals = document.querySelectorAll('.modal');
    modals.forEach(modal => {
        new bootstrap.Modal(modal);
    });
});

    // Make addresses available to the JavaScript
    const addresses = <%- JSON.stringify(addresses) %>;
    
    $(document).ready(function() {
        // Coupon application
        $('#applyCouponBtn').click(function() {
            const code = $('#couponCode').val().trim();
            if (!code) {
                showCouponMessage('Please enter a coupon code', 'error');
                return;
            }

            $.ajax({
                url: '/apply-coupon',
                method: 'POST',
                data: { code },
                success: function(response) {
                    if (response.success) {
                        showCouponMessage(response.message, 'success');
                        updateOrderSummary(response.data);
                        
                        // Show the applied coupon section
                        const discountRow = `
                            <div class="summary-item discount-row">
                                <span>
                                    Discount (${response.data.coupon.code})
                                    <button class="btn btn-link btn-sm text-danger p-0 ms-2 remove-coupon">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </span>
                                <span class="text-success">-₹${response.data.discountAmount.toFixed(2)}</span>
                            </div>
                        `;
                        
                        // Remove any existing discount row
                        $('.discount-row').remove();
                        // Add the new discount row before shipping
                        $(discountRow).insertBefore('.shipping-info');
                        
                        // Clear the input
                        $('#couponCode').val('');
                    } else {
                        showCouponMessage(response.message, 'error');
                    }
                },
                error: function(xhr) {
                    const response = xhr.responseJSON || {};
                    showCouponMessage(response.message || 'Failed to apply coupon', 'error');
                }
            });
        });

        // Remove coupon
        $(document).on('click', '.remove-coupon', function(e) {
            e.preventDefault();
            
            $.ajax({
                url: '/remove-coupon',
                method: 'POST',
                success: function(response) {
                    if (response.success) {
                        // Remove the discount row
                        $('.discount-row').remove();
                        
                        // Update the order summary
                        updateOrderSummary(response.data);
                        
                        showCouponMessage('Coupon removed successfully', 'success');
                        setTimeout(() => {
                            $('#couponMessage').empty();
                        }, 3000);
                    }
                },
                error: function() {
                    showCouponMessage('Failed to remove coupon', 'error');
                }
            });
        });

        function showCouponMessage(message, type) {
            const messageDiv = $('#couponMessage');
            messageDiv.removeClass('text-success text-danger')
                     .addClass(type === 'success' ? 'text-success' : 'text-danger')
                     .text(message);
            
            if (type === 'success') {
                setTimeout(() => {
                    messageDiv.empty();
                }, 3000);
            }
        }

        function updateOrderSummary(data) {
            // Update prices
            $('#subtotal').text(`₹${(data.subtotal || 0).toFixed(2)}`);
            $('#tax').text(`₹${(data.tax || 0).toFixed(2)}`);
            $('#total').text(`₹${(data.total || 0).toFixed(2)}`);
        }
    });
</script>
