<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - ComicAura</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&family=Lacquer&family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/user/login.css">
</head>
<body>
    <div class="login-container">
        <div class="row login-row">
            <!-- Left Side -->
            <div class="col-md-5 login-left">
                <div class="brand-logo">COMIC AURA</div>
                <h2>Password Recovery</h2>
                <p>Follow the steps to reset your password and regain access to your account.</p>
            </div>

            <!-- Right Side -->
            <div class="col-md-7 login-right">
                <!-- Email Form -->
                <form id="emailForm" class="reset-form">
                    <h2 class="mb-4">Forgot Password</h2>
                    <div class="form-floating mb-4">
                        <input type="email" class="form-control" id="email" placeholder="name@example.com" name="email" required>
                        <label for="email">Email address</label>
                    </div>
                    <button type="submit" class="login-btn w-100">Send OTP</button>
                    <div class="sign-up-link mt-3">
                        Remember your password? <a href="/login">Login</a>
                    </div>
                </form>

                <!-- OTP Form -->
                <form id="otpForm" class="reset-form" style="display: none;">
                    <h2 class="mb-4">Enter OTP</h2>
                    <div class="form-floating mb-4">
                        <input type="text" class="form-control" id="otp" placeholder="Enter OTP" name="otp" required maxlength="4" pattern="\d{4}">
                        <label for="otp">Enter 4-digit OTP</label>
                    </div>
                    <button type="submit" class="login-btn w-100">Verify OTP</button>
                    <div class="sign-up-link mt-3">
                        Didn't receive OTP? <a href="#" onclick="window.location.reload()">Resend</a>
                    </div>
                </form>

                <!-- Reset Password Form -->
                <form id="resetForm" class="reset-form" style="display: none;">
                    <h2 class="mb-4">Reset Password</h2>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="newPassword" placeholder="New Password" name="newPassword" required>
                        <label for="newPassword">New Password</label>
                        <i class="fas fa-eye password-toggle"></i>
                    </div>
                    <div class="form-floating mb-4">
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" name="confirmPassword" required>
                        <label for="confirmPassword">Confirm Password</label>
                        <i class="fas fa-eye password-toggle"></i>
                    </div>
                    <button type="submit" class="login-btn w-100">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/user/forgotPassword.js"></script>
</body>
</html>
