<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/user/profile.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script src="/js/user/profile.js" defer></script>

    <main class="profile-page">
        <div class="container py-5">
            <div class="row">
                <!-- Profile Sidebar -->
                <div class="col-lg-3">
                    <div class="profile-sidebar">
                        <h3 class="text-center mt-3"><%= user.name %></h3>
                        <div class="profile-nav">
                            <button class="nav-item active" data-section="overview">
                                <i class="bi bi-person"></i> Overview
                            </button>
                            <button class="nav-item" data-section="address">
                                <i class="bi bi-geo-alt-fill"></i> Address
                            </button>
                            <button class="nav-item" data-section="wallet">
                                <i class="bi bi-wallet2"></i> Wallet
                            </button>
                            <button class="nav-item" data-section="wishlist">
                                <i class="bi bi-heart"></i> Wishlist
                            </button>
                            <button class="nav-item" data-section="settings">
                                <i class="bi bi-gear"></i> Settings
                            </button>
                        </div>
                    </div>

                </div>

                <!-- Profile Content -->
                <div class="col-lg-9">
                    <!-- Overview Section -->
                    <div class="profile-section active" id="overview">
                        <div class="overview-card">
                            <!-- Profile Header -->
                            <div class="profile-header">
                                <div class="profile-avatar">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <div class="profile-info">
                                    <h2 class="user-name"><%= user.name %></h2>
                                    <p class="user-email"><%= user.email %></p>
                                    <div class="wallet-info">
                                        <i class="bi bi-wallet2"></i>
                                        <span>Wallet Balance: ₹<%= wallet.balance.toFixed(2) %></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Stats Section -->
                            <div class="stats-container">
                                <div class="row g-4">
                                    <div class="col-md-4">
                                        <div class="stat-card">
                                            <div class="stat-icon orders">
                                                <i class="bi bi-bag-check fs-3 text-white"></i>
                                            </div>
                                            <div class="stat-value"><%= user.orderCount || 0 %></div>
                                            <div class="stat-label">Total Orders</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="stat-card">
                                            <div class="stat-icon wishlist">
                                                <i class="bi bi-heart fs-3 text-white"></i>
                                            </div>
                                            <div class="stat-value"><%= user.wishlistCount || 0 %></div>
                                            <div class="stat-label">Wishlist Items</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="stat-card">
                                            <div class="stat-icon wallet">
                                                <i class="bi bi-wallet2 fs-3 text-white"></i>
                                            </div>
                                            <div class="stat-value">₹<%= wallet.balance.toFixed(2) %></div>
                                            <div class="stat-label">Wallet Balance</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Wallet Transactions -->
                            <div class="wallet-section mt-4">
                                <h3 class="section-title">Wallet History</h3>
                                <div class="transaction-list">
                                    <% if (wallet.transactions && wallet.transactions.length > 0) { %>
                                        <% wallet.transactions.reverse().forEach(transaction => { %>
                                            <div class="transaction-item">
                                                <div class="transaction-icon <%= transaction.type === 'CREDIT' ? 'credit' : 'debit' %>">
                                                    <i class="bi <%= transaction.type === 'CREDIT' ? 'bi-arrow-down-circle' : 'bi-arrow-up-circle' %>"></i>
                                                </div>
                                                <div class="transaction-details">
                                                    <div class="transaction-description"><%= transaction.description %></div>
                                                    <div class="transaction-date"><%= new Date(transaction.date).toLocaleDateString() %></div>
                                                </div>
                                                <div class="transaction-amount <%= transaction.type === 'CREDIT' ? 'text-success' : 'text-danger' %>">
                                                    <%= transaction.type === 'CREDIT' ? '+' : '-' %>₹<%= transaction.amount.toFixed(2) %>
                                                </div>
                                            </div>
                                        <% }); %>
                                    <% } else { %>
                                        <div class="no-transactions">
                                            <i class="bi bi-clock-history"></i>
                                            <p>No transactions yet</p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Account Details -->
                            <div class="account-details">
                                <h3 class="section-title">Account Details</h3>
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="detail-card">
                                            <div class="detail-label">Account Status</div>
                                            <div class="detail-value">
                                                <% if (!user.isBlocked) { %>
                                                    <span class="badge badge-active">Active</span>
                                                <% } else { %>
                                                    <span class="badge badge-blocked">Blocked</span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="detail-card">
                                            <div class="detail-label">Default Address</div>
                                            <div class="detail-value">
                                                <% if (addresses && addresses.address.length > 0) { %>
                                                    <% const defaultAddress = addresses.address.find(addr => addr.isDefault) %>
                                                    <% if (defaultAddress) { %>
                                                        <%= defaultAddress.name %><br>
                                                        <%= defaultAddress.city %>, <%= defaultAddress.state %>
                                                    <% } else { %>
                                                        <span class="text-muted">No default address set</span>
                                                    <% } %>
                                                <% } else { %>
                                                    <span class="text-muted">No addresses saved</span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="detail-card">
                                            <div class="detail-label">Contact Number</div>
                                            <div class="detail-value">
                                                <% if (addresses && addresses.address.length > 0) { %>
                                                    <% const defaultAddress = addresses.address.find(addr => addr.isDefault) %>
                                                    <% if (defaultAddress && defaultAddress.phoneNumber) { %>
                                                        <%= defaultAddress.phoneNumber %>
                                                    <% } else { %>
                                                        <span class="text-muted">No phone number added</span>
                                                    <% } %>
                                                <% } else { %>
                                                    <span class="text-muted">No phone number added</span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Orders Section -->
                    <div class="profile-section" id="orders">
                        <div class="section-header">
                            <h3>My Orders</h3>
                            <a href="/order-history" class="btn btn-primary">View All Orders</a>
                        </div>
                    </div>

                    <!-- Wallet Section -->
                    <div class="profile-section" id="wallet">
                        <div class="wallet-container">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="wallet-balance-card">
                                        <div class="wallet-icon">
                                            <i class="bi bi-wallet2"></i>
                                        </div>
                                        <div class="balance-amount">₹<%= wallet.balance.toFixed(2) %></div>
                                        <div class="balance-label">Available Balance</div>
                                        <button class="btn btn-success mt-3 w-100" onclick="showAddMoneyModal()">
                                            <i class="bi bi-plus-circle"></i> Add Money
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="wallet-transactions-card">
                                        <h3 class="section-title">Transaction History</h3>
                                        <div class="transaction-list">
                                            <% if (wallet.transactions && wallet.transactions.length > 0) { %>
                                                <% wallet.transactions.reverse().forEach(transaction => { %>
                                                    <div class="transaction-item">
                                                        <div class="transaction-icon <%= transaction.type === 'CREDIT' ? 'credit' : 'debit' %>">
                                                            <i class="bi <%= transaction.type === 'CREDIT' ? 'bi-arrow-down-circle' : 'bi-arrow-up-circle' %>"></i>
                                                        </div>
                                                        <div class="transaction-details">
                                                            <div class="transaction-description"><%= transaction.description %></div>
                                                            <div class="transaction-date"><%= new Date(transaction.date).toLocaleDateString() %></div>
                                                        </div>
                                                        <div class="transaction-amount <%= transaction.type === 'CREDIT' ? 'text-success' : 'text-danger' %>">
                                                            <%= transaction.type === 'CREDIT' ? '+' : '-' %>₹<%= transaction.amount.toFixed(2) %>
                                                        </div>
                                                    </div>
                                                <% }); %>
                                            <% } else { %>
                                                <div class="no-transactions">
                                                    <i class="bi bi-clock-history"></i>
                                                    <p>No transactions yet</p>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="profile-section" id="address">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 style="color: white;">My Addresses</h3>
                            <% const addressCount = addresses && addresses.address ? addresses.address.length : 0 %>
                            <div>
                                <small class="text-muted me-3">
                                    <%= addressCount %> of 5 addresses used
                                </small>
                                <button type="button" 
                                        class="btn btn-primary" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#addAddressModal"
                                        <%= addressCount >= 5 ? 'disabled' : '' %>>
                                    <i class="bi bi-plus-lg"></i> Add New Address
                                </button>
                            </div>
                        </div>
                        
                        <!-- Address Cards Container -->
                        <div class="row g-3">
                            <% if (addresses && addresses.address.length > 0) { %>
                                <% addresses.address.forEach(address => { %>
                                    <div class="col-md-6">
                                        <div class="address-card h-100 p-4 border rounded-4 position-relative bg-dark shadow-sm">
                                            <% if (address.isDefault) { %>
                                                <span class="badge bg-primary position-absolute top-0 end-0 mt-3 me-3">Default</span>
                                            <% } %>
                                            <div class="d-flex align-items-start mb-3">
                                                <div class="address-icon me-3 text-primary">
                                                    <% if (address.addressType === 'home') { %>
                                                        <i class="bi bi-house-door fs-4"></i>
                                                    <% } else if (address.addressType === 'work') { %>
                                                        <i class="bi bi-briefcase fs-4"></i>
                                                        <% } else { %>
                                                        <i class="bi bi-geo-alt fs-4"></i>
                                                    <% } %>
                                                </div>
                                                <div>
                                                    <h5 class="mb-1 text-white"><%= address.name %></h5>
                                                    <span class="badge bg-dark text-white border"><%= address.addressType.toUpperCase() %></span>
                                                </div>
                                            </div>
                                            <div class="address-details text-white">
                                                <p class="mb-2">Country : <%= address.country %></p>
                                                <p class="mb-2">State : <%= address.state %></p>
                                                <p class="mb-2">City : <%= address.city %></p>
                                                <p class="mb-2">PinCode : <%= address.pinCode %></p>
                                                <p class="mb-2">Street : <%= address.street %></p>
                                                <p class="mb-3"><i class="bi bi-telephone me-2"></i><%= address.phoneNumber %></p>
                                            </div>
                                            <div class="address-actions d-flex gap-2 mt-3">
                                                <button class="btn btn-outline-primary btn-sm flex-grow-1" onclick="editModal('<%= address._id %>')">
                                                    <i class="bi bi-pencil me-1"></i> Edit
                                                </button>
                                                <button class="btn btn-outline-danger btn-sm flex-grow-1" onclick="deleteAddress('<%= address._id %>')">
                                                    <i class="bi bi-trash me-1" ></i> Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="col-12">
                                    <div class="text-center py-5 border rounded-4 bg-white shadow-sm">
                                        <i class="bi bi-geo-alt display-4 text-white mb-3"></i>
                                        <h4 class="text-white">No addresses saved yet</h4>
                                        <p class="text-white mb-0">Add a new address to manage your delivery locations</p>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Add Address Modal -->
                    <div class="modal fade" id="addAddressModal" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content" style="background-color: black;">
                                <div class="modal-header border-bottom">
                                    <h5 class="modal-title text-white">Add New Address</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="addressForm" >
                                        <div class="mb-3">
                                            <label class="form-label text-white">Name</label>
                                            <input type="text" class="form-control" name="fullName" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label text-white">Phone Number</label>
                                            <input type="tel" class="form-control" name="phone" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label text-white">Street Address</label>
                                            <textarea class="form-control" name="street" rows="2" required></textarea>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <label class="form-label text-white">City</label>
                                                <input type="text" class="form-control" name="city" required>
                                            </div>
                                            <div class="col-6">
                                                <label class="form-label text-white">State</label>
                                                <input type="text" class="form-control" name="state" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <label class="form-label text-white">Country</label>
                                                <input type="text" class="form-control" name="country" required>
                                            </div>
                                            <div class="col-6">
                                                <label class="form-label text-white">PIN Code</label>
                                                <input type="text" class="form-control" name="pinCode" required>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label text-white">Address Type</label>
                                            <div class="d-flex gap-3">
                                                <div class="form-check flex-grow-1">
                                                    <input class="form-check-input" type="radio" name="addressType" value="home" id="homeType" checked>
                                                    <label class="form-check-label w-100 p-3 border rounded text-center address-type-label" for="homeType">
                                                        <i class="bi bi-house-door d-block fs-3 mb-2 text-white"></i>
                                                        <span class="text-white fw-bold">Home</span>
                                                    </label>
                                                </div>
                                                <div class="form-check flex-grow-1">
                                                    <input class="form-check-input" type="radio" name="addressType" value="work" id="workType">
                                                    <label class="form-check-label w-100 p-3 border rounded text-center address-type-label" for="workType">
                                                        <i class="bi bi-briefcase d-block fs-3 mb-2 text-white"></i>
                                                        <span class="text-white fw-bold">Work</span>
                                                    </label>
                                                </div>
                                                <div class="form-check flex-grow-1">
                                                    <input class="form-check-input" type="radio" name="addressType" value="other" id="otherType">
                                                    <label class="form-check-label w-100 p-3 border rounded text-center address-type-label" for="otherType">
                                                        <i class="bi bi-geo-alt d-block fs-3 mb-2 text-white"></i>
                                                        <span class="text-white fw-bold">Other</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" name="isDefault" id="defaultAddress">
                                            <label class="form-check-label text-white" for="defaultAddress">
                                                Set as default address
                                            </label>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer border-top">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" form="addressForm" onclick="addAddress(event)" class="btn btn-primary">Save Address</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="editAddressModal" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content" style="background-color: black;">
                                <div class="modal-header border-bottom">
                                    <h5 class="modal-title text-white">Edit Address</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="editAddressForm" onsubmit="updateAddress(event)">
                                        <input type="hidden" name="addressId" id="editAddressId">
                                        <div class="mb-3">
                                            <label class="form-label text-white">Name</label>
                                            <input type="text" class="form-control" name="name" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label text-white">Phone Number</label>
                                            <input type="tel" class="form-control" name="phoneNumber" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label text-white">Street Address</label>
                                            <textarea class="form-control" name="street" rows="2" required></textarea>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <label class="form-label text-white">City</label>
                                                <input type="text" class="form-control" name="city" required>
                                            </div>
                                            <div class="col-6">
                                                <label class="form-label text-white">State</label>
                                                <input type="text" class="form-control" name="state" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-6">
                                                <label class="form-label text-white">Country</label>
                                                <input type="text" class="form-control" name="country" required>
                                            </div>
                                            <div class="col-6">
                                                <label class="form-label text-white">PIN Code</label>
                                                <input type="text" class="form-control" name="pinCode" required>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label text-white">Address Type</label>
                                            <div class="d-flex gap-3">
                                                <select class="form-select" name="addressType" required>
                                                    <option value="home">Home</option>
                                                    <option value="work">Work</option>
                                                    <option value="other">Other</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" name="isDefault" id="editDefaultAddress">
                                            <label class="form-check-label text-white" for="editDefaultAddress">
                                                Set as default address
                                            </label>
                                        </div>
                                        <div class="d-flex justify-content-end gap-2">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Update Address</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Add Money Modal -->
                    <div class="modal fade" id="addMoneyModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Add Money to Wallet</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="amount" class="form-label">Amount (₹)</label>
                                        <input type="number" class="form-control" id="walletAmount" min="1" step="1" required>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-success" onclick="addMoneyToWallet()">Add Money</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Settings Section -->
                    <div class="profile-section" id="settings">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h4>Account Details</h4>
                                <form class="settings-form" id="profile-details-form">
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" value="<%= user.name %>" name="name">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" value="<%= user.email %>" name="email" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Phone</label>
                                        <input type="tel" class="form-control" value="<%= user.phoneNumber %>" name="phone">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <h4>Security Settings</h4>
                                <form class="settings-form" id="password-change-form" onsubmit="changePassword(event)">
                                    <div class="mb-4">
                                        <h5>Change Password</h5>
                                        <div class="form-group mb-3">
                                            <label class="form-label">Current Password</label>
                                            <input type="password" class="form-control" name="currentPassword" placeholder="Enter current password">
                                        </div>
                                        <div class="form-group mb-3">
                                            <label class="form-label">New Password</label>
                                            <input type="password" class="form-control" name="newPassword" placeholder="Enter new password">
                                        </div>
                                        <div class="form-group mb-4">
                                            <label class="form-label">Confirm New Password</label>
                                            <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm new password">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Change Password</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <h4>Email Settings</h4>
                                <div class="tab-content" id="emailSettingsTabContent">
                                    <div class="tab-pane fade show active" id="change-email" role="tabpanel" aria-labelledby="change-email-tab">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title">Change Email</h5>
                                                <form id="changeEmailForm">
                                                    <div class="mb-3">
                                                        <label for="currentEmail" class="form-label">Current Email</label>
                                                        <input type="email" class="form-control" id="currentEmail" value="<%= user.email %>" disabled>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="newEmail" class="form-label">New Email</label>
                                                        <input type="email" class="form-control" id="newEmail" name="newEmail" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="emailOtp" class="form-label">Enter OTP</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" id="emailOtp" name="emailOtp" maxlength="4" pattern="\d{4}" disabled>
                                                            <button class="btn btn-outline-secondary" type="button" id="sendEmailOtp">Send OTP</button>
                                                        </div>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary" disabled>Change Email</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
    
    <script>
        window.addresses = <%- JSON.stringify(addresses) %>;
    </script>
