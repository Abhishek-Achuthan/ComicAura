<%- include('../partials/header') %>
    <section class="hero">
        <div class="container">
            <h1>Welcome to ComicAura</h1>
            <p class="text-white">Discover the Best Anime Merchandise and Collectibles</p>
            <button class="btn btn-primary btn-lg">Explore Now</button>
        </div>
    </section>
    

    <section class="new-arrivals py-5">
        <div class="container">
            <h2 class="text-center mb-2" style="color: var(--primary-color)">New Arrivals</h2>
            <p class="text-center mb-5" style="color: white;">Check out our latest anime merchandise collection</p>
            <div class="owl-carousel owl-theme">
                <% if (newArrivals && newArrivals.length > 0) { %>
                    <% newArrivals.forEach(product => { %>
                        <div class="item">
                            <div class="product-card">
                                <div class="product-image">
                                    <% if (user) { %>
                                        <button type="button" class="btn btn-link wishlist-btn <%= product.inWishlist ? 'active' : '' %>" 
                                                data-product-id="<%= product._id %>">
                                            <i class="bi <%= product.inWishlist ? 'bi-heart-fill' : 'bi-heart' %>"></i>
                                        </button>
                                    <% } %>
                                    <a href="/product/<%= product._id %>" class="product-link">
                                        <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                                    </a>
                                </div>
                                <a href="/product/<%= product._id %>" class="product-link">
                                    <div class="product-info">
                                        <h3 class="product-title"><%= product.name %></h3>
                                        <div class="product-category"><%= product.category.name %></div>
                                        <div class="product-price">
                                            <% if (product.discount > 0) { %>
                                                <span class="current-price"><%= product.formattedSalePrice %></span>
                                                <span class="original-price"><%= product.formattedRegularPrice %></span>
                                            <% } else { %>
                                                <span class="current-price"><%= product.formattedRegularPrice %></span>
                                            <% } %>
                                        </div>
                                    </div>
                                </a>
                                <div class="product-actions">
                                    <% if (product.inCart) { %>
                                        <button 
                                            class="add-to-cart-btn in-cart" 
                                            onclick="window.location.href='/cart'"
                                            data-product-id="<%= product._id %>"
                                        >
                                            <i class="fas fa-shopping-cart"></i> Go to Cart
                                        </button>
                                    <% } else { %>
                                        <button 
                                            class="add-to-cart-btn" 
                                            onclick="addToCart('<%= product._id %>', this)"
                                            data-product-id="<%= product._id %>"
                                        >
                                            <i class="fas fa-cart-plus"></i> Add to Cart
                                        </button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center">
                        <p>No new arrivals available at the moment.</p>
                    </div>
                <% } %>
            </div>
            <div class="text-center mt-4">
                <a href="/shop" class="btn btn-outline-light">See More Products</a>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-4" style="color: var(--primary-color)">What Our Customers Say</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <div class="star-rating mb-3">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                        </div>
                        <p class="mb-3">"ComicAura has the best selection of anime merch I've ever seen!"</p>
                        <p class="mb-0" style="color: var(--primary-color)">- Alex</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <div class="star-rating mb-3">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                        </div>
                        <p class="mb-3">"Fast shipping and excellent customer service. Highly recommended!"</p>
                        <p class="mb-0" style="color: var(--primary-color)">- Sarah</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="testimonial-card">
                        <div class="star-rating mb-3">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
