<%- include('../partials/header') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css">
<link rel="stylesheet" href="/css/user/productDetail.css">
<style>
    body {
        padding-top: 76px;
    }
</style>
<div class="container mt-5 pt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
            <li class="breadcrumb-item"><a href="/shop" class="text-decoration-none">Shop</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
        </ol>
    </nav>
</div>
<main class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="product-gallery">
                    <div class="swiper gallery-main mb-3">
                        <div class="swiper-wrapper">
                            <% product.images.forEach(image => { %>
                            <div class="swiper-slide">
                                <div class="zoom-container">
                                    <img src="<%= image %>" alt="<%= product.name %>" class="img-fluid rounded zoom-image">
                                </div>
                            </div>
                            <% }); %>
                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                    <div class="swiper gallery-thumbs">
                        <div class="swiper-wrapper">
                            <% product.images.forEach(image => { %>
                            <div class="swiper-slide">
                                <img src="<%= image %>" alt="<%= product.name %> thumbnail" class="img-fluid rounded">
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product-details p-4 bg-dark text-white rounded shadow">
                    <h1 class="mb-4 product-title display-5 fw-bold"><%= product.name %></h1>
                    <div class="price-stock-container bg-dark bg-opacity-75 p-3 rounded mb-4">
                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                            <div class="price-container">
                                <% if (product.salePrice) { %>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="fs-2 fw-bold text-success"><%= product.formattedSalePrice %></span>
                                        <span class="text-secondary text-decoration-line-through"><%= product.formattedRegularPrice %></span>
                                        <span class="badge bg-danger px-3 py-2"><%= product.discount %>% OFF</span>
                                    </div>
                                <% } else { %>
                                    <span class="fs-2 fw-bold text-success"><%= product.formattedRegularPrice %></span>
                                <% } %>
                            </div>
                            <div class="rating bg-dark bg-opacity-50 p-2 rounded">
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star-half-alt text-warning"></i>
                                <span class="ms-2 text-light">(4.5)</span>
                            </div>
                        </div>
                    </div>
                    <div class="stock-quantity-container bg-dark bg-opacity-75 p-3 rounded mb-4">
                        <!-- Coupon Section -->
                        <div class="coupon-section bg-dark bg-opacity-75 p-3 rounded mb-4">
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <i class="fas fa-tag text-warning"></i>
                                <h5 class="mb-0">Available Offers</h5>
                            </div>
                            <div class="coupon-list">
                                <div class="coupon-item d-flex align-items-center gap-2 mb-2">
                                    <i class="fas fa-circle text-success" style="font-size: 8px;"></i>
                                    <span>Use code <strong class="text-warning">FIRST10</strong> for 10% off on your first order</span>
                                </div>
                                <div class="coupon-item d-flex align-items-center gap-2 mb-2">
                                    <i class="fas fa-circle text-success" style="font-size: 8px;"></i>
                                    <span>Free shipping on orders above â‚¹999</span>
                                </div>
                                <div class="coupon-item d-flex align-items-center gap-2">
                                    <i class="fas fa-circle text-success" style="font-size: 8px;"></i>
                                    <span>Get additional 5% off on prepaid orders</span>
                                </div>
                            </div>
                        </div>
                        <!-- Policy Highlights -->
                        <div class="policy-highlights bg-dark bg-opacity-75 p-3 rounded mb-4">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="policy-item text-center p-2 rounded" style="background: rgba(255,255,255,0.05);">
                                        <i class="fas fa-truck text-warning mb-2 fs-4"></i>
                                        <p class="mb-0 small">Fast Delivery<br>2-4 Business Days</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="policy-item text-center p-2 rounded" style="background: rgba(255,255,255,0.05);">
                                        <i class="fas fa-undo text-warning mb-2 fs-4"></i>
                                        <p class="mb-0 small">Easy Returns<br>10-Day Policy</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="policy-item text-center p-2 rounded" style="background: rgba(255,255,255,0.05);">
                                        <i class="fas fa-shield-alt text-warning mb-2 fs-4"></i>
                                        <p class="mb-0 small">Secure Payments<br>100% Protected</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="policy-item text-center p-2 rounded" style="background: rgba(255,255,255,0.05);">
                                        <i class="fas fa-certificate text-warning mb-2 fs-4"></i>
                                        <p class="mb-0 small">Genuine Products<br>Quality Assured</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex align-items-center gap-3">
                                <div class="input-group quantity-selector" style="width: 150px;">
                                    <button class="btn btn-outline-light" type="button" id="decreaseQuantity">-</button>
                                    <input type="number" class="form-control text-center bg-dark text-light" id="quantity" value="1" min="1" max="<%= product.stock %>">
                                    <button class="btn btn-outline-light" type="button" id="increaseQuantity">+</button>
                                </div>
                                <div class="stock-status">
                                    <% if (product.stock > 10) { %>
                                        <span class="badge bg-success px-3 py-2">In Stock (<%= product.stock %> available)</span>
                                    <% } else if (product.stock > 0) { %>
                                        <span class="badge bg-warning text-dark px-3 py-2">Low Stock (Only <%= product.stock %> left)</span>
                                    <% } else { %>
                                        <span class="badge bg-danger px-3 py-2">Out of Stock</span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-grid gap-3 d-md-flex">
                        <button class="btn btn-primary btn-lg flex-grow-1" onclick="addToCart('<%= product._id %>')">
                            <i class="fas fa-cart-plus me-2"></i>Add to Cart
                        </button>
                        <button class="btn btn-outline-light btn-lg" onclick="toggleWishlist('<%= product._id %>')">
                            <i class="<%= product.isWishlisted ? 'fas' : 'far' %> fa-heart"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-5">
            <div class="col-12">
                <ul class="nav nav-tabs justify-content-center" id="productTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab">Description</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab">Reviews</button>
                    </li>
                </ul>
                <div class="tab-content mt-3" id="productTabsContent">
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <p class="text-center"><%= product.description %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="reviews" role="tabpanel">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <h3>Customer Reviews</h3>
                                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reviewModal">Write a Review</button>
                                    </div>
                                    <div id="reviewsList">
                                        <!-- Reviews will be dynamically added here -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="related-products mt-5">
            <div class="container">
                <h2 class="section-title text-center mb-4">You May Also Like</h2>
                <% if (relatedProducts && relatedProducts.length > 0) { %>
                    <div class="swiper related-products-swiper">
                        <div class="swiper-wrapper">
                            <% relatedProducts.forEach(product => { %>
                                <div class="swiper-slide">
                                    <div class="related-product-card">
                                        <div class="product-image">
                                            <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                                        </div>
                                        <div class="product-info">
                                            <h3 class="product-title"><%= product.name %></h3>
                                            <div class="product-rating">
                                                <div class="stars">
                                                    <% for(let i = 0; i < 5; i++) { %>
                                                        <i class="fas fa-star <%= i < (product.averageRating || 0) ? 'filled' : '' %>"></i>
                                                    <% } %>
                                                </div>
                                                <span class="rating-count">(<%= product.ratings ? product.ratings.length : 0 %>)</span>
                                            </div>
                                            <div class="product-price">
                                                <% if (product.salePrice) { %>
                                                    <span class="sale-price"><%= product.formattedSalePrice %></span>
                                                    <span class="regular-price"><%= product.formattedRegularPrice %></span>
                                                    <span class="discount-badge">-<%= product.discount %>%</span>
                                                <% } else { %>
                                                    <span class="regular-price"><%= product.formattedRegularPrice %></span>
                                                <% } %>
                                            </div>
                                            <a href="/product/<%= product._id %>" class="view-product-btn">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-pagination"></div>
                    </div>
                <% } else { %>
                    <p class="text-center text-muted">No related products found.</p>
                <% } %>
            </div>
        </section>
    </div>
</main>

<%- include('../partials/footer') %>

<!-- Modals -->
<div class="modal fade" id="reviewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Write a Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="reviewForm">
                    <div class="mb-3">
                        <label for="reviewTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="reviewTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="reviewRating" class="form-label">Rating</label>
                        <select class="form-select" id="reviewRating" required>
                            <option value="">Select a rating</option>
                            <option value="5">5 stars</option>
                            <option value="4">4 stars</option>
                            <option value="3">3 stars</option>
                            <option value="2">2 stars</option>
                            <option value="1">1 star</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="reviewContent" class="form-label">Review</label>
                        <textarea class="form-control" id="reviewContent" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="sizeChartModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Size Chart</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <img src="https://via.placeholder.com/400x300?text=Size+Chart" alt="Size Chart" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const zoomContainers = document.querySelectorAll('.zoom-container');
        
        zoomContainers.forEach(container => {
            const img = container.querySelector('.zoom-image');
            
            container.addEventListener('mousemove', (e) => {
                const { left, top, width, height } = container.getBoundingClientRect();
                const x = (e.clientX - left) / width * 100;
                const y = (e.clientY - top) / height * 100;
                
                img.style.transformOrigin = `${x}% ${y}%`;
            });
            
            container.addEventListener('mouseenter', () => {
                img.style.transform = 'scale(2)';
            });
            
            container.addEventListener('mouseleave', () => {
                img.style.transform = 'scale(1)';
            });
        });
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize the suggested products slider
        new Swiper('.suggested-products-slider', {
            slidesPerView: 1,
            spaceBetween: 20,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            breakpoints: {
                640: {
                    slidesPerView: 2,
                },
                768: {
                    slidesPerView: 3,
                },
                1024: {
                    slidesPerView: 4,
                },
            },
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            loop: true
        });
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize the related products slider
        new Swiper('.related-products-swiper', {
            slidesPerView: 1,
            spaceBetween: 20,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
                dynamicBullets: true,
                dynamicMainBullets: 3,
                renderBullet: function (index, className) {
                    return '<span class="' + className + '"></span>';
                }
            },
            breakpoints: {
                640: {
                    slidesPerView: 2,
                },
                768: {
                    slidesPerView: 3,
                },
                1024: {
                    slidesPerView: 4,
                },
            },
            autoplay: {
                delay: 2000,
                disableOnInteraction: false,
                pauseOnMouseEnter: true
            },
            loop: true,
            speed: 1000,
            watchSlidesProgress: true,
            watchOverflow: true
        });
    });
    async function toggleWishlist(productId) {
    try {
        const response = await fetch('/wishlist/add', {
            method: 'POST',
            headers:{
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({productId})
        });

        const result = await response.json();

      if (result.success) { 
        await Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: result.message,
            showConfirmButton: false,
            timer: 1500
        });
      }
        
    } catch (error) {
        console.log(error);
    }
}
</script>
<script src="/js/user/productDetail.js"></script>
