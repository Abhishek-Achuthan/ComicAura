<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ComicAura - Your Cart</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/user/home.css">
        <link rel="stylesheet" href="/css/user/cart.css">
        <link rel="stylesheet" href="/css/pagination.css">
        <style>
            /* Other styles... */
            
            .checkout-btn {
                display: flex;
                align-items: center;
                justify-content: space-between;
                width: 100%;
                padding: 15px 20px;
                background-color: #2ecc71;
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 16px;
                font-weight: 600;
                cursor: pointer;
                transition: background-color 0.3s ease;
                text-decoration: none;  /* Added for link */
            }

            .checkout-btn:hover {
                background-color: #27ae60;
                color: white;  /* Keep text white on hover */
                text-decoration: none;  /* No underline on hover */
            }

            /* Other styles... */
        </style>
    </head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/home">ComicAura</a>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/categories">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                </ul>
            </div>

            <!-- Mobile Search -->
            <div class="d-lg-none w-100 mt-2 collapse" id="mobileSearch">
                <div class="search-wrapper w-100">
                    <i class="bi bi-search search-icon"></i>
                    <input type="search" class="form-control search-input" placeholder="Search...">
                </div>
            </div>

            <div
                class="d-flex align-items-center">
                <!-- Desktop Search -->
                <div class="search-wrapper me-3 d-none d-lg-block">
                    <i class="bi bi-search search-icon"></i>
                    <input type="search" class="form-control search-input" placeholder="Search...">
                </div>

                <!-- Mobile Search Toggle -->
                <button class="icon-btn d-lg-none me-2" type="button" data-bs-toggle="collapse" data-bs-target="#mobileSearch">
                    <i class="bi bi-search"></i>
                </button>

                <div class="user-dropdown">
                    <% if (user) { %>
                        <span class="me-2 d-none d-lg-inline" style="color: var(--primary-color); font-weight: 500;"><%= user.firstName %></span>
                    <% } %>
                    <a class="icon-btn" id="userDropdownBtn">
                        <i class="bi bi-person-circle"></i>
                    </a>
                    <div class="user-dropdown-content" id="userDropdownContent">
                        <% if (user) { %>
                            <a href="/profile">
                                <i class="bi bi-person"></i>Profile</a>
                            <a href="/orders">
                                <i class="bi bi-box-seam"></i>My Orders</a>
                            <a href="/wishlist">
                                <i class="bi bi-heart"></i>Wishlist</a>
                            <div class="user-dropdown-divider"></div>
                            <a href="/logout">
                                <i class="bi bi-box-arrow-right"></i>Logout</a>
                        <% } else { %>
                            <a href="/login">
                                <i class="bi bi-box-arrow-in-right"></i>Login</a>
                            <a href="/signup">
                                <i class="bi bi-person-plus"></i>Sign Up</a>
                        <% } %>
                    </div>
                </div>
                <a href="/cart" class="icon-btn">
                    <i class="bi bi-cart3"></i>
                    <span class="cart-count">0</span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <div class="container py-5">
            <div
                class="row">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    <div class="cart-container">
                        <h4 class="mb-4">Shopping Cart</h4>
                        <div id="cartItems">
                            <%  if(cart && cart.items.length > 0) { %>
                                <% cart.items.forEach(function(item) { %>
                                    <div class="cart-item" data-id="<%= item.product.productId %>" data-price="<%= item.product.regularPrice %>">
                                        <div class="row">
                                            <div class="col-md-3" style=" min-height: 200px; display: flex; align-items: center; justify-content: center;">
                                                <% const imagePath = item.product.images[0]; %>
                                                <img src="<%= imagePath %>" alt="<%= item.product.name %>" class="img-fluid" style="max-height: 180px; object-fit: contain;">
                                            </div>
                                            <div class="col-md-5">
                                                <h5 class="product-name"><%= item.product.name %></h5>
                                                <div class="price-container">
                                                    <% if (item.product.salePrice < item.product.regularPrice) { %>
                                                        <span class="regular-price">₹<%= item.product.regularPrice %></span>
                                                    <% } else { %>
                                                        <span class="regular-price">₹<%= item.product.regularPrice %></span>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="quantity-control">
                                                    <button class="quantity-btn decrease" data-id="<%= item.product.productId %>">-</button>
                                                    <input type="number" class="quantity-input" value="<%= item.quantity %>" min="1" readonly>
                                                    <button class="quantity-btn increase" data-id="<%= item.product.productId %>">+</button>
                                                </div>
                                            </div>
                                            <div class="col-md-1 text-end">
                                                <button class="remove-item" data-id="<%= item.product.productId %>">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                                <!-- Pagination Container -->
                                <div id="cartPagination" class="pagination-container mt-4"></div>
                            <% } else { %>
                                <div class="empty-cart-container">
                                    <div class="empty-cart">
                                        <i class="bi bi-cart-x"></i>
                                        <h3>Your Cart is Empty</h3>
                                        <p>Looks like you haven't added anything to your cart yet.</p>
                                        <a href="/shop" class="btn shop-now-btn">
                                            <i class="bi bi-bag-heart"></i> Start Shopping
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <!-- Order Summary -->
                <% if(cart && cart.items.length > 0) { %>
                <div class="col-lg-4">
                    <div class="cart-container order-summary" id="orderSummary">
                        <div class="summary-header">
                            <h4>Order Summary</h4>
                            <span class="items-count" id="itemsCount"><%= cart.itemCount %> item<%= cart.itemCount !== 1 ? 's' : '' %></span>
                        </div>

                        <div class="summary-details">
                            <div class="summary-item">
                                <span>Subtotal</span>
                                <span id="subtotal">₹<%= cart.subtotal.toFixed(2) %></span>
                            </div>
                            <div class="summary-item">
                                <span>Shipping</span>
                                <div class="shipping-info">
                                    <span class="free-shipping">Free</span>
                                    <span class="shipping-note">Standard Delivery (2-4 days)</span>
                                </div>
                            </div>
                            <div class="summary-item">
                                <span>Tax</span>
                                <span id="tax">₹<%= cart.tax.toFixed(2) %></span>
                            </div>

                            <div class="promo-code">
                                <div class="promo-header">
                                    <i class="bi bi-tag-fill"></i>
                                    <span>Have a promo code?</span>
                                </div>
                                <div class="promo-input">
                                    <input type="text" placeholder="Enter code" id="promoCode">
                                    <button class="apply-btn" id="applyPromo">Apply</button>
                                </div>
                            </div>

                            <div class="total-section">
                                <div class="total-row">
                                    <strong>Total</strong>
                                    <div class="total-amount">
                                        <strong id="total">₹<%= cart.total.toFixed(2) %></strong>
                                        <span class="currency">INR</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="checkout-section">
                            <a href="/checkout" class="checkout-btn" id="checkoutBtn">
                                <span>Proceed to Checkout</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                            <div class="secure-checkout">
                                <i class="bi bi-shield-lock-fill"></i>
                                <span>Secure Checkout</span>
                            </div>
                            <div class="payment-methods">
                                <i class="bi bi-credit-card"></i>
                                <i class="bi bi-paypal"></i>
                                <i class="bi bi-google-pay"></i>
                                <i class="bi bi-apple-pay"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <h3 class="footer-title">ComicAura</h3>
                    <p>Your ultimate destination for premium anime merchandise.</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="footer-title">Quick Links</h4>
                    <ul class="footer-links">
                        <li>
                            <a href="#">Home</a>
                        </li>
                        <li>
                            <a href="#">Shop</a>
                        </li>
                        <li>
                            <a href="#">Categories</a>
                        </li>
                        <li>
                            <a href="#">About Us</a>
                        </li>
                        <li>
                            <a href="#">Contact</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="footer-title">Customer Service</h4>
                    <ul class="footer-links">
                        <li>
                            <a href="#">FAQ</a>
                        </li>
                        <li>
                            <a href="#">Shipping & Returns</a>
                        </li>
                        <li>
                            <a href="#">Terms & Conditions</a>
                        </li>

                        <li>
                            <a href="#">Privacy Policy</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="footer-title">Contact Us</h4>
                    <p>1234 Anime Street</p>
                    <p>Tokyo, Japan 123456</p>
                    <p>Phone: +1 (123) 456-7890</p>
                    <p>Email: info@comicaura.com</p>
                </div>
            </div>
            <div class="text-center mt-4 pt-4 border-top border-secondary">
                <p>&copy; 2023 ComicAura. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="/js/user/pagination.js"></script>
    <script src="/js/user/cart.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Restore pagination initialization
            const cartItems = document.getElementsByClassName('cart-item');
            if (cartItems.length > 0) {
                initializePagination(cartItems.length, 2, 'cartItems', 'cartPagination');
            }
            
            // Toast configuration
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000
            };

            // Checkout button handler
            const checkoutBtn = document.getElementById('checkoutBtn');
            if (checkoutBtn) {
                checkoutBtn.addEventListener('click', function() {
                    window.location.href = '/checkout';
                });
            }

            const cartContainer = document.getElementById('cartItems');
            
            if (cartContainer) {
                cartContainer.addEventListener('click', async (event) => {
                    const button = event.target.closest(".quantity-btn");
                    if (!button) return;
                    
                    const prodId = button.dataset.id;
                    const action = button.classList.contains("increase") ? "increase" : "decrease";
                    const quantityInput = button.parentElement.querySelector(".quantity-input");
                    const currentQty = parseInt(quantityInput.value, 10);

                    // Check quantity limits
                    if (action === "decrease" && currentQty <= 1) {
                        toastr.warning('Quantity cannot be less than 1');
                        return;
                    }
                    if (action === "increase" && currentQty >= 5) {
                        toastr.warning('Maximum quantity limit is 5');
                        return;
                    }

                    try {
                        const response = await fetch('/updateCartQuantity', {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ prodId, action })
                        });

                        const data = await response.json();
                        if (data.success) {
                            // Update quantity input
                            quantityInput.value = data.cartData.quantity;
                            
                            // Update item total
                            const cartItem = button.closest('.cart-item');
                            cartItem.querySelector('.price-container').innerHTML = `₹${data.cartData.itemTotal.toFixed(2)}`;
                            
                            // Update cart summary
                            document.getElementById('subtotal').textContent = `₹${data.cartData.subtotal.toFixed(2)}`;
                            document.getElementById('tax').textContent = `₹${data.cartData.tax.toFixed(2)}`;
                            document.getElementById('total').textContent = `₹${data.cartData.total.toFixed(2)}`;
                            document.getElementById('itemsCount').textContent = `${data.cartData.itemCount} item${data.cartData.itemCount !== 1 ? 's' : ''}`;
                            
                            toastr.success(data.message);
                        } else {
                            toastr.error(data.message || 'Failed to update quantity');
                        }
                    } catch (error) {
                        console.error("Error updating cart:", error);
                        toastr.error('Failed to update cart. Please try again');
                    }
                });
            }

            const removeButtons = document.querySelectorAll('.remove-item');
            removeButtons.forEach(button => {
                button.addEventListener('click', async(event) => {
                    const cartItemId = button.dataset.id;
                    try {
                        const response = await fetch('/removeFromCart', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ cartItemId })
                        });

                        const data = await response.json();
                        if (data.success) {
                            // Remove the item from DOM directly
                            const cartItem = button.closest('.cart-item');
                            cartItem.remove();
                            
                            // Update pagination after removing item
                            const remainingItems = document.querySelectorAll('.cart-item');
                            if (remainingItems.length > 0) {
                                initializePagination(remainingItems.length, 2, 'cartItems', 'cartPagination');
                            } else {
                                toastr.success('Item removed from cart');
                                setTimeout(() => location.reload(), 1000);
                                return;
                            }
                            
                            toastr.success('Item removed from cart');
                        } else {
                            toastr.error(data.message || 'Failed to remove item');
                        }
                    } catch (error) {
                        console.error('Error removing item:', error);
                        toastr.error('Failed to remove item. Please try again');
                    }
                });
            });

            // Server messages
            if (typeof serverMessages !== 'undefined') {
                if (serverMessages.success) toastr.success(serverMessages.success);
                if (serverMessages.error) toastr.error(serverMessages.error);
                if (serverMessages.warning) toastr.warning(serverMessages.warning);
                if (serverMessages.info) toastr.info(serverMessages.info);
            }

            // Dropdown functionality
            const userDropdownBtn = document.getElementById('userDropdownBtn');
            const userDropdownContent = document.getElementById('userDropdownContent');
            const mobileSearch = document.getElementById('mobileSearch');
            
            if (userDropdownBtn && userDropdownContent) {
                userDropdownBtn.addEventListener('click', function() {
                    userDropdownContent.classList.toggle('show');
                    if (mobileSearch?.classList.contains('show')) {
                        mobileSearch.classList.remove('show');
                    }
                });
            }

            // Close dropdowns when clicking outside
            document.addEventListener('click', function (e) {
                if (userDropdownContent && !userDropdownBtn?.contains(e.target)) {
                    userDropdownContent.classList.remove('show');
                }
                if (mobileSearch && !mobileSearch.contains(e.target) && !e.target.matches('.bi-search')) {
                    mobileSearch.classList.remove('show');
                }
            });

            // Mobile navbar collapse
            const navLinks = document.querySelectorAll('.nav-link');
            const navbarCollapse = document.querySelector('.navbar-collapse');
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (navbarCollapse?.classList.contains('show')) {
                        navbarCollapse.classList.remove('show');
                    }
                });
            });
        });
    </script>
</body>
</html>