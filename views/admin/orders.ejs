<%- include('./partials/header') %>
<link rel="stylesheet" href="/css/admin/orders.css">

<div class="content-header">
    <h1 class="content-title">Order Management</h1>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <% stats.forEach(stat => { %>
        <div class="col-md-4 col-lg-3">
            <div class="stats-card">
                <div class="stats-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stats-info">
                    <h3><%= stat.count %></h3>
                    <p><%= stat._id %> Orders</p>
                    <h4 class="text-accent">₹<%= stat.total.toLocaleString() %></h4>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form id="filterForm" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Search</label>
                <input type="text" class="form-control" name="search" placeholder="Order ID, Customer..." value="<%= search || '' %>">
            </div>
            <div class="col-md-2">
                <label class="form-label">Start Date</label>
                <input type="date" class="form-control" name="startDate" value="<%= startDate || '' %>">
            </div>
            <div class="col-md-2">
                <label class="form-label">End Date</label>
                <input type="date" class="form-control" name="endDate" value="<%= endDate || '' %>">
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select class="form-select" name="status">
                    <option value="all" <%= currentStatus === 'all' ? 'selected' : '' %>>All Status</option>
                    <option value="Pending" <%= currentStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                    <option value="Processing" <%= currentStatus === 'Processing' ? 'selected' : '' %>>Processing</option>
                    <option value="Shipped" <%= currentStatus === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                    <option value="Delivered" <%= currentStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                    <option value="Cancelled" <%= currentStatus === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                    <option value="Returned" <%= currentStatus === 'Returned' ? 'selected' : '' %>>Returned</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Orders Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td>#<%= order._id.toString().slice(-6) %></td>
                                <td>
                                    <div class="text-light"><%= order.userId.name %></div>
                                    <small class="text-muted"><%= order.userId.email %></small>
                                </td>
                                <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                                <td class="text-accent">₹<%= order.totalAmount.toLocaleString() %></td>
                                <td>
                                    <span class="status-badge status-<%= order.orderStatus.toLowerCase() %>">
                                        <%= order.orderStatus %>
                                    </span>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-icon btn-light" onclick="viewOrder('<%= order._id %>')">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-icon btn-light" onclick="updateStatus('<%= order._id %>')">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="fas fa-box-open fa-3x mb-3 text-muted"></i>
                                <h4 class="text-light">No Orders Found</h4>
                                <p class="text-muted">There are currently no orders matching your filters.</p>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Pagination -->
<% if (totalPages > 1) { %>
    <nav aria-label="Orders pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            <% 
                const queryParams = new URLSearchParams();
                if (search) queryParams.set('search', search);
                if (startDate) queryParams.set('startDate', startDate);
                if (endDate) queryParams.set('endDate', endDate);
                if (currentStatus && currentStatus !== 'all') queryParams.set('status', currentStatus);
                if (currentSort) queryParams.set('sort', currentSort);
            %>
            <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                <% queryParams.set('page', currentPage - 1); %>
                <a class="page-link" href="?<%= queryParams.toString() %>" <%= currentPage == 1 ? 'tabindex="-1" aria-disabled="true"' : '' %>>
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
            
            <% for(let i = 1; i <= totalPages; i++) { %>
                <% queryParams.set('page', i); %>
                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                    <a class="page-link" href="?<%= queryParams.toString() %>"><%= i %></a>
                </li>
            <% } %>
            
            <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                <% queryParams.set('page', parseInt(currentPage) + 1); %>
                <a class="page-link" href="?<%= queryParams.toString() %>" <%= currentPage == totalPages ? 'tabindex="-1" aria-disabled="true"' : '' %>>
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    document.getElementById('filterForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const formData = new FormData(this);
        const params = new URLSearchParams();
        
        for (let [key, value] of formData.entries()) {
            if (value) params.append(key, value);
        }
        
        window.location.href = '/admin/orders?' + params.toString();
    });

    async function updateStatus(orderId) {
        const { value: status } = await Swal.fire({
            title: 'Update Order Status',
            input: 'select',
            inputOptions: {
                'Pending': 'Pending',
                'Processing': 'Processing',
                'Shipped': 'Shipped',
                'Delivered': 'Delivered',
                'Cancelled': 'Cancelled',
                'Returned': 'Returned'
            },
            inputPlaceholder: 'Select a status',
            showCancelButton: true,
            confirmButtonText: 'Update',
            cancelButtonText: 'Cancel',
            inputValidator: (value) => {
                if (!value) return 'Please select a status';
            }
        });

        if (status) {
            try {
                const response = await fetch(`/admin/order/${orderId}/status`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status })
                });

                const data = await response.json();
                if (data.success) {
                    Swal.fire('Success', 'Status Updated', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                Swal.fire('Error', error.message || 'Failed to update order status', 'error');
            }
        }
    }

    async function viewOrder(orderId) {
        try {
            const response = await fetch(`/admin/orders/${orderId}`);
            const order = await response.json();
            
            if (!order) {
                throw new Error('Order not found');
            }

            const modalHtml = `
                <div class="modal fade" id="orderDetailModal" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-dark">Order #${orderId.slice(-6)}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Customer Info -->
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-white">Customer Information</h6>
                                        <p class="mb-1 text-white"><strong>Name:</strong> ${order.userId.name}</p>
                                        <p class="mb-1 text-white"><strong>Email:</strong> ${order.userId.email}</p>
                                        <p class="mb-0 text-white"><strong>Order Date:</strong> ${new Date(order.orderDate).toLocaleString()}</p>
                                    </div>
                                </div>

                                <!-- Shipping Address -->
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-white">Shipping Address</h6>
                                        <p class="mb-1 text-white">${order.shippingAddress.name}</p>
                                        <p class="mb-1 text-white">${order.shippingAddress.street}</p>
                                        <p class="mb-1 text-white">${order.shippingAddress.city}, ${order.shippingAddress.state} ${order.shippingAddress.pinCode}</p>
                                        <p class="mb-1 text-white">${order.shippingAddress.country}</p>
                                        <p class="mb-0 text-white"><strong>Phone:</strong> ${order.shippingAddress.phoneNumber}</p>
                                    </div>
                                </div>

                                <!-- Order Items -->
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-white">Order Items</h6>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr class="text-white">
                                                        <th>Product</th>
                                                        <th>Quantity</th>
                                                        <th class="text-end">Price</th>
                                                        <th class="text-end">Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    ${order.products.map(item => `
                                                        <tr class="text-dark">
                                                            <td>${item.productId.name}</td>
                                                            <td>${item.quantity}</td>
                                                            <td class="text-end">₹${item.price.toLocaleString()}</td>
                                                            <td class="text-end">₹${(item.price * item.quantity).toLocaleString()}</td>
                                                        </tr>
                                                    `).join('')}
                                                    <tr class="text-dark">
                                                        <td colspan="3" class="text-end"><strong>Total Amount:</strong></td>
                                                        <td class="text-end"><strong>₹${order.totalAmount.toLocaleString()}</strong></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <!-- Order Status -->
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-white">Order Status</h6>
                                        <p class="mb-0">
                                            <span class="status-badge status-${order.orderStatus.toLowerCase()}">
                                                ${order.orderStatus}
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            // Remove existing modal if any
            const existingModal = document.getElementById('orderDetailModal');
            if (existingModal) {
                existingModal.remove();
            }

            // Add modal to body
            document.body.insertAdjacentHTML('beforeend', modalHtml);

            // Initialize and show modal
            const modal = new bootstrap.Modal(document.getElementById('orderDetailModal'));
            modal.show();

            // Clean up when modal is hidden
            document.getElementById('orderDetailModal').addEventListener('hidden.bs.modal', function () {
                this.remove();
            });

        } catch (error) {
            console.error('Error viewing order:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to load order details. Please try again.'
            });
        }
    }
</script>
<%- include('./partials/footer') %>