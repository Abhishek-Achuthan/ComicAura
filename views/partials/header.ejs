<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'ComicAura - Premium Anime Merchandise' %></title>
    
    <!-- Stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&family=Lacquer&family=Pacifico&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <% if (typeof pageCss !== 'undefined') { %>
        <link rel="stylesheet" href="/css/user/<%= pageCss %>.css">
    <% } %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/user/home.css">
    <link rel="stylesheet" href="/css/user/offerBanner.css">
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/utils/sweetAlert.js"></script>
</head>
<body>
    <%- include('./offerBanner') %>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">ComicAura</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home">Contact</a>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <div class="search-wrapper me-3">
                        <i class="bi bi-search search-icon"></i>
                        <input type="search" class="form-control search-input" placeholder="Search products...">
                    </div>
                    <div class="user-dropdown">
                        <% if (user) { %>
                            <span class="me-2" style="color: var(--primary-color); font-weight: 500;"><%= user.firstName %></span>
                        <% } %>
                        <a class="icon-btn" id="userDropdownBtn">
                            <i class="bi bi-person-circle"></i>
                        </a>
                        <div class="user-dropdown-content" id="userDropdownContent">
                            <% if (user) { %>
                                <a href="/profile"><i class="bi bi-person"></i>Profile</a>
                                <a href="/order-history"><i class="bi bi-box-seam"></i>My Orders</a>
                                <a href="/wishlist"><i class="bi bi-heart"></i>Wishlist</a>
                                <div class="user-dropdown-divider"></div>
                                <a href="/logout"><i class="bi bi-box-arrow-right"></i>Logout</a>
                            <% } else { %>
                                <a href="/login"><i class="bi bi-box-arrow-in-right"></i>Login</a>
                                <a href="/signup"><i class="bi bi-person-plus"></i>Sign Up</a>
                            <% } %>
                        </div>
                    </div>
                    <a href="/cart" class="icon-btn ms-3">
                        <i class="bi bi-cart3"></i>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <span class="cart-count"><%= locals.cartCount || 0 %></span>
                        <% } else { %>
                            <span class="cart-count">0</span>
                        <% } %>
                    </a>
                </div>
            </div>
        </div>
    </nav>
   

